<Window x:Class="Logging.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DebugWindow" Height="200" Width="300">
    <Grid>
        <ScrollViewer>
            <TextBlock Text="{Binding Path=NotificationMessage}" TextWrapping="Wrap"></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
